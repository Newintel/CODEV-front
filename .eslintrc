{
  "root": true,
  "extends": "@react-native-community",
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "rules": {
        "@typescript-eslint/no-shadow": [
          "error"
        ],
        "no-shadow": "off",
        "no-undef": "off",
        "object-curly-spacing": [
          "error",
          "always"
        ],
        "key-spacing": [
          "error",
          {
            "beforeColon": false,
            "afterColon": true
          }
        ],
        "no-spaced-func": "off"
      }
    }
  ]
}